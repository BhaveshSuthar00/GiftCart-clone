        headers: {
          "Content-Type": "application/json",
        },
      });

      let d = await response.json();
      console.log(d);
    } catch (err) {
      console.log(err);
    }
  }

  // fetching data from database

  async function getDataFromDataBase(url) {
    try {
      let res = await fetch(url);
      let data = await res.json();

      if (Array.isArray(data)) {
        appendDatafromDataBase(data);
      } else {
        let arr = [];
        arr.push(data);

        appendDatafromDataBase(arr);
      }
    } catch (err) {
      console.log(err, "Not Found");
    }
  }
  function appendDatafromDataBase(data) {
    let tbody = document.querySelector("tbody");
    tbody.innerHTML = null;
    if (Object.keys(data[0]).length == 0) {
      alert("Not found");
      return;
    }
    data = data.reverse();
    data.forEach(
      ({
        id,
        image,
        product,
        price,
        discount,
        description,
        stock_qty,
        sub_category,
        category,
      }) => {
        let tr = document.createElement("tr");

        let td1 = document.createElement("td");
        td1.textContent = id;

        let td2 = document.createElement("td");
        let img = document.createElement("img");
        img.src = image;
        td2.append(img);

        let td3 = document.createElement("td");
        td3.textContent = product;

        let td4 = document.createElement("td");
        td4.textContent = price;

        let td5 = document.createElement("td");
        td5.textContent = discount;

        let td6 = document.createElement("td");
        td6.textContent = category;

        let td7 = document.createElement("td");
        td7.textContent = sub_category;

        let td8 = document.createElement("td");
        td8.textContent = stock_qty;

        let td9 = document.createElement("td");
        td9.innerHTML = `<span class="material-icons-outlined"> delete </span>`;
        td9.onclick = () => {
          deleteProduct(id);
        };
        tr.append(td1, td2, td3, td4, td5, td6, td7, td8, td9);
        tbody.append(tr);
      }
    );
  }
</script>
