  // update functionality Put
  // updateProduct();
  async function updateProduct(e) {
    e.preventDefault();
    let flag = false;
    let id = document.getElementById("id").value;
    let data = {
      id: document.getElementById("id").value,
      product: document.getElementById("title").value,
      price: document.getElementById("price").value,
      discount: document.getElementById("discount").value,
      category: document.getElementById("category").value,
      sub_category: document.getElementById("sub-cat").value,
      image: document.getElementById("img").value,
      stock_qty: document.getElementById("qty").value,
      description: document.getElementById("des").value,
    };
    let y = Object.keys(data);
    let send = {};

    for (let k = 0; k < y.length; k++) {
      if (data[y[k]] === "") {
        flag = true;
      } else {
        send[y[k]] = data[y[k]];
      }
    }

    try {
      data = JSON.stringify(send);
      let option = "PUT";
      if (flag) {
        option = "PATCH";
      }
      console.log(option);

      let response = await fetch(`http://localhost:2000/product/${id}`, {
        method: option,
